<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sanyogghosh.social.MainSocialActivity">
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progress"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.sanyogghosh.social.MainSocialActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in"
            android:paddingRight="62dp"
            android:background="#ffffff"
            android:paddingLeft="62dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:elevation="8dp"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:text="Hello World!" >





            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_marginBottom="22dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="Sign In"/>


            <TextView
                android:layout_width="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:text="Username"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:gravity="top"
                android:layout_weight="0.5"
                android:textSize="22sp"

                android:fontFamily="monospace"
                android:id="@+id/username_signin"
                android:hint="Your Username"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_marginTop="16dp"
                android:textColor="#000000"
                android:text="Password"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="0.5"
                android:textSize="22sp"
                android:fontFamily="monospace"
                android:id="@+id/password_signin"
                android:hint="Your Password"/>

            <Spinner
                android:layout_width="wrap_content"
                android:id="@+id/spinner"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="16sp"
                android:id="@+id/check_details_dialog2"
                android:layout_marginTop="5dp"
                android:textColor="#ff0000"
                android:textStyle="italic"
                android:text= "!! Check your details"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="16sp"
                android:id="@+id/Account_error"
                android:layout_marginTop="5dp"
                android:textColor="#ff0000"
                android:textStyle="italic"
                android:text= "!! Account exists"/>


        </LinearLayout>


    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:src="@drawable/done"
        android:id="@+id/done_1"
        android:layout_height="wrap_content" />
</FrameLayout>